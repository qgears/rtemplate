<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<!-- Parent POM for QGears review tool components. -->
	<parent>
		<groupId>hu.qgears</groupId>
		<artifactId>root</artifactId>
		<version>1.0.0</version>
		<relativePath>../repository-builder/parent-poms/root</relativePath>
	</parent>

	<properties>
		<!-- The -source and -target arguments of Java compiler. -->
		<java-src-version>1.8</java-src-version>
		<java-trg-version>1.8</java-trg-version>
	</properties>

	<groupId>hu.qgears</groupId>
	<artifactId>rtemplate-parent</artifactId>
	<version>3.1.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<repositories>
		<repository>
			<id>eclipse-mars-mirror</id>
			<layout>p2</layout>
			<url>https://download.eclipse.org/releases/2020-03</url>
		</repository>
		<repository>
			<id>qgears-opensource-repo</id>
			<layout>p2</layout>
			<url>https://qgears.net/opensource/updates</url>
		</repository>
	</repositories>
	
	<profiles>
		<!-- This profile is activated when the version bump script is executed.
			It adds each the aggregator pom of the component (../../) as a child module 
			of this component, so the tycho-version-plugin will be able to detect parent-child 
			relationships propertly, so also changes the version string in the parent pom reference.
		--> 
		<profile>
			<id>versionbump</id>
			<activation>
				<property>
					<name>newVersion</name>
				</property>
			</activation>
			<modules>
				<module>../../</module>
			</modules>
		</profile>
	</profiles>
</project>
